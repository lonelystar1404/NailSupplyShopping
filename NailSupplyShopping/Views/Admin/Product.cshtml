@model IEnumerable<NailSupplyShopping.DAL.Tbl_Product>

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2>Product</h2>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>Product Details
        <a href="../Admin/AddProduct" class="btn btn-info pull-right ">Add New</a>
    </div>

    <div class="card-body">


        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Sr. No.</th>
                        <th>Category Name</th>
                        <th>Action </th>

                    </tr>
                </thead>
                <tfoot>
                    <tr>

                        <th>Sr. No.</th>
                        <th>Category Name</th>
                        <th>Action </th>

                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        int count = 1;
                        <tr>
                            <td>@count</td>
                            <td>@item.ProductName</td>
                            <td>

                                @Html.ActionLink("Edit", "EditProduct", new { productId = item.ProductId })
                            </td>

                        </tr>
                        count++;
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
